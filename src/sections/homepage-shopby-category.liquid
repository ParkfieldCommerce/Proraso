<!-- Homepage About -->
{% assign ShopByCategory = section.settings %}
<div class="ShopByCategory__container container l margin-bottom-14x s-margin-bottom-6x">
  <div class="row">
    <div class="column l12 m12 s12">
      <h2 class="ShopByCategory__heading">{{ShopByCategory.heading}}</h2>
    </div>
  </div>
  <div class="row">
    <div class="column l12 m12 s12">
      <div class="ShopByCategory__collections">
      {% for block in section.blocks %}
        <div class="ShopByCategory__collection">
          <a class="ShopByCategory__collection__link" href="{{block.settings.url}}">
            <div class="ShopByCategory__collection__image">
              <img src="{{block.settings.image | img_url:'master'}}" alt="{{block.settings.image.alt}}">
            </div>
            <h3 class="ShopByCategory__collection__heading">{{block.settings.title}}</h3>
          </a>
        </div>
      {% endfor %}
      </div>
    </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Shop By Category",
  "class":"homepage-shopby-category",
  "settings":[
    {
      "type":"text",
      "id":"heading",
      "label":"Heading"
    }
  ],
  "blocks":[
    {
      "name":"Category",
      "type":"category",
      "limit":6,
      "settings":[
        {
          "type":"text",
          "id":"title",
          "label":"Label"
        },
        {
          "type":"image_picker",
          "id":"image",
          "label":"Image"
        },
        {
          "type":"url",
          "id":"url",
          "label":"URL"
        }
      ]
    }
  ],
  "presets":[{
      "name": "Shop By Category",
      "category": "Homepage"
    }
  ]
}
{% endschema %}