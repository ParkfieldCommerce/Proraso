<!-- Homepage About -->
{% assign Events = section.settings %}
<div class="HomepageEvents__container margin-bottom-12x s-margin-bottom-6x">
  <div class="HomepageEvents__container container l">
    <div class="row">
      <div class="column l12 m12 s12">
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Homepage Events",
  "class":"homepage-events",
  "settings":[
    {
      "type":"text",
      "id":"heading",
      "label":"Heading"
    },
    {
      "type":"textarea",
      "id":"body",
      "label":"Body"
    }
  ],
  "blocks":[
    {
      "name":"Event",
      "type":"event",
      "limit":3,
      "settings":[
        {
          "type":"collection",
          "id":"collection",
          "label":"Collection"
        }
      ]
    }
  ],
  "presets":[{
      "name": "Events Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}