<!-- /templates/{{ template }}.liquid -->
<div class="Article container l">
  <div class="row">
    <article class="column l8 m8 s12" itemscope itemtype="http://schema.org/Article">
      <header>
        <h1>
          {{ article.title }}
          {% for tag in article.tags %}
            {% if tag contains '_' %}
            -
            {{tag | split:'_' | first }} {{tag | split:'_' | last }}
            {% endif %}
          {% endfor %}
        </h1>
      </header>

      <div class="Article__body rte" itemprop="articleBody">
        {{ article.content }}
      </div>
    </article>

    <aside class="column l4 m4 s-hide" role="complementary">
      {% include 'event-sidebar' %}
    </aside>
  </div>

  <div class="row margin-top-4x Article__mobile-events">
    <div class="column l12 m12 s12">
      <h3 class="center">Upcoming Events</h3>
    </div>
    {% for event in blog.articles limit: 2 %}
        <div class="column s-show s6">
          {% include 'event-listing' %}
        </div>
    {% endfor %}
  </div>

</div>
