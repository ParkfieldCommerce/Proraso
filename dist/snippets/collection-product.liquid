<!-- /snippets/collection-product.liquid -->

{% assign sold_out = true %}
{% assign on_sale = false %}
{% assign sale_price = product.price | money %}

{% assign column_width = column_width | default: 'column l3 m3 s6' %}

{% if product.available %}
  {% assign sold_out = false %}
{% endif %}

{% if product.compare_at_price > product.price %}
  {% assign on_sale = true %}
{% endif %}

<div class="CollectionProduct__column {{ column_width }}{% if sold_out %} sold_out{% endif %}{% if on_sale %} on_sale{% endif %}">
  <div class="CollectionProduct">
    <div class="CollectionProduct__image-container">
    {% if product.featured_image %}
      <a href="{{ product.url | within: collection }}">
        <img srcset="{{ product.featured_image | img_url: '512x512', scale: 2 }} 2x" src="{{ product.featured_image | img_url: '512x512' }}" alt="{{ product.featured_image.alt | escape }}">
      </a>
    {% endif %}
    </div>
    <p>
      <a href="{{ product.url | within: collection }}">{{ product.title }}</a><br>
      {% if on_sale %}
        {% if product.price_varies %}
          {{ 'product.on_sale_from_html' | t: price: sale_price }}
        {% else %}
          <b>{{ 'product.on_sale_html' | t: price: sale_price }}</b>
        {% endif %}
      {% else %}
        {% if product.price_varies %}
          {% assign price = product.price | money %}
          {{ 'product.priced_from_html' | t: price: price }}
        {% else %}
          {{ product.price | money }}
        {% endif %}
      {% endif %}
      {% if on_sale %}
        <span class="hidden">{{ 'product.original_price' | t }}</span>
        <s>{{ product.compare_at_price | money }}</s>
      {% endif %}
    </p>
    <button
      {% if sold_out %}
      class="Btn disabled" disabled
      {% else %}
      class="Btn js-quickAdd"
      {% endif %}
      type="button"
      data-variant-id="{{ product.first_available_variant.id }}"
    >
      {% if sold_out %}{{ 'product.sold_out' | t }}{% else %}{{ 'product.add_to_cart' | t }}{% endif %}
    </button>
  </div>
</div>
