      cursor: pointer;
      z-index: 9997;
      text-align: initial;
      @include overlay();
      @include prefixer(transition-delay, 0.3s);
      @include prefixer(transform, translateY($gutter/2));
      @include flex();
      @include flex-align(items, center);
      @include flex-justify(center);
      @include transition();
