<div class="AboutSlider">
  <div class="container l">
    <div class="row margin-bottom-4x">
      <div class="column l12 m12 s12 center">
        <h3 class="h1 AboutSlider__heading AboutLineHeading AboutLineHeading--black">{{section.settings.heading}}</h3>
        <p class="AboutSlider__body">{{section.settings.body}}</p>
      </div>
    </div>
  </div>
  <div class="AboutSlider__slider js-aboutSlider">
    {% for block in section.blocks %}
    <div class="AboutSlider__slide">
      <img src="{{block.settings.image | img_url:'master'}}" alt="{{block.settings.image.alt}}">
    </div>
    {% endfor %}
  </div>
</div>

<script>
  $('.js-aboutSlider').slick({
    slidesToShow: 4,
    arrows: false,
    responsive: [
      {
        breakpoint: 500,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          infinite: true,
          centerMode: true
        }
      }
    ]
  });
</script>
{% schema %}
  {
    "name": "About Slider",
    "settings": [
      {
        "type": "header",
        "content": "Text Content"
      },
      {
        "id":"heading",
        "type":"text",
        "label":"Heading"
      },
      {
        "id":"body",
        "type":"textarea",
        "label":"Body"
      }
    ],
    "blocks":[
      {
        "type":"slide",
        "name":"Slide",
        "settings": [
          {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
          }
        ]
      }
    ]
  }
{% endschema %}