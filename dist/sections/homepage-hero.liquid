<!-- Homepage Hero -->
<div class="Hero margin-bottom-9x s-margin-bottom-4x">
  <div class="Hero__slider js-heroSlider">
    {% for block in section.blocks %}
    {% if block.settings.hero_slide_enable %}
    <div class="Hero__slide">
      <a href="{{block.settings.hero_url}}">
        <div class="Hero__image Hero__image--desktop">
          <img class="js-heroImage--{{forloop.index}}" src="{{block.settings.hero_image | img_url:'master'}}" alt="{{block.settings.hero_image.alt}}">
        </div>
        <div class="Hero__image Hero__image--mobile">
          <img src="{{block.settings.hero_image_2 | img_url:'master'}}" alt="{{block.settings.hero_image_2.alt}}">
        </div>
        <div class="Hero__text-container Hero__text-container--outer">
          <div class="Hero__text-container Hero__text-container--inner">
            <div class="Hero__text-wrap">
              <h2 class="Hero__main">{{block.settings.hero_maintext}}</h2>
              <div class="Hero__sub">{{block.settings.hero_subtext}}</div>
              {% unless block.settings.hero_button_text == blank %}
              <button type="button" class="Hero__button Text--border-style">{{block.settings.hero_button_text}}</button>
              {% endunless %}
            </div>
          </div>
        </div>
      </a>
    </div>
    {% endif %}
    {% endfor %}
  </div>
  <div class="Hero__slider-dots js-heroDots"></div>
</div>
<script>
  if($(window).width() > 1800){
    {% for block in section.blocks %}
      {% if block.settings.hero_image_wide %}
      $('.js-heroSlider .js-heroImage--{{forloop.index}}').attr('src','{{block.settings.hero_image_wide | img_url:'master'}}');
      {% endif %}
    {% endfor %}
  }
</script>
{% schema %}
{
  "name": "Main Hero Slider",
  "class":"homepage-hero",
  "blocks":[{
    "type":"slide",
    "name":"Slide",
    "limit": 3,
    "settings": [
      {
        "type":"header",
        "content":"General Settings"
      },
      {
        "id":"hero_slide_enable",
        "type":"checkbox",
        "label":"Enable Slide",
        "default":true
      },
      {
        "id": "hero_image",
        "type": "image_picker",
        "label": "Desktop Image"
      },
      {
        "id": "hero_image_wide",
        "type": "image_picker",
        "label": "Wide Desktop Image(>1800px)"
      },
      {
        "id": "hero_image_2",
        "type": "image_picker",
        "label": "Mobile Image"
      },
      {
        "type":"header",
        "content":"Text Settings"
      },
      {
        "id": "hero_maintext",
        "type": "text",
        "label": "Main Text"
      },
      {
        "id": "hero_subtext",
        "type": "textarea",
        "label": "Subtext"
      },
      {
        "type":"header",
        "content":"Button Settings"
      },
      {
        "id":"hero_button_text",
        "type":"text",
        "label":"Button Text"
      },
      {
        "id": "hero_url",
        "type":"url",
        "label":"Button Url"
      }
    ]
  }],
  "presets":[{
      "name": "Main Hero Slider",
      "category": "Homepage"
    }
  ]
}
{% endschema %}