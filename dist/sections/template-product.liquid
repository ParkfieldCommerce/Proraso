            "label":"Description"
          },
          {
            "type":"image_picker",
            "id":"ingredient_image_1",
            "label":"Ingredient Image 1"
          },
          {
            "type":"text",
            "id":"ingredient_image_1_label",
            "label":"Ingredient Label 1"
          },
          {
            "type":"image_picker",
            "id":"ingredient_image_2",
            "label":"Ingredient Image 2"
          },
          {
            "type":"text",
            "id":"ingredient_image_2_label",
            "label":"Ingredient Label 2"
          }
        ]
      }
    ]
