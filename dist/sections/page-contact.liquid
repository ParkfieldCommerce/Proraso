<!-- /templates/{{ template }}.liquid -->

<div class="container m">
  <div class="row margin-bottom-5x">
    <div class="column l12 m12 s12 center">
      <h1 class="Contact__title">{{ page.title }}</h1>
      <div class="Contact__body rte center">
        {{ page.content }}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="column l12 m12 s12">
      {% assign reasonsForContact = '' %}
      {% for block in section.blocks %}
        {% assign reasonsForContact = reasonsForContact | append:',' | append: block.settings.title %}
      {% endfor %}
      {% assign reasonsForContact = reasonsForContact | split:',' %}

      {% include 'form-contact'  %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "About Content",
    "settings":[
    ],
    "blocks":[
      {
        "type":"Reason",
        "name":"Reason for Contact",
        "settings": [
          {
            "id":"title",
            "type":"text",
            "label":"Heading"
          }
        ]
      }
    ]
  }
{% endschema %}